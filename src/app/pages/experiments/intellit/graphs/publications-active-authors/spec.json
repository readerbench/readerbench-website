{
    "dataSource": {
        "url": "assets/publications-active-authors/data.json"
    },
    "series": [
        {
            "id": "s1",
            "type": "ColumnSeries",
            "name": "Authors",
            "dataFields": {
                "valueY": "authors",
                "categoryX": "year"
            },
            "columns": {
                "tooltipText": "[#fff font-size: 15px]{name} in {categoryX}:\n[/][#fff font-size: 20px]{valueY}[/] [#fff]{additional}[/]",
                "propertyFields": {
                    "fillOpacity": "fillOpacity",
                    "stroke": "stroke",
                    "strokeWidth": "strokeWidth",
                    "strokeDasharray": "columnDash"
                }
            },
            "tooltip": {
                "label": {
                    "textAlign": "middle"
                }
            }
        },
        {
            "id": "s2",
            "type": "LineSeries",
            "name": "Publications",
            "dataFields": {
                "valueY": "publications",
                "categoryX": "year"
            },
            "stroke": "#fdd400",
            "strokeWidth": 3,
            "strokeDasharray": "lineDash",
            "tooltip": {
                "label": {
                    "textAlign": "middle"
                }
            },
            "bullets": [{
                "fill": "#fdd400",
                "tooltipText": "[#fff font-size: 15px]{name} in {categoryX}:\n[/][#fff font-size: 20px]{valueY}[/] [#fff]{additional}[/]",
                "children": [{
                    "type": "Circle",
                    "radius": 0.5,
                    "fill": "#fff",
                    "strokeWidth": 3
                }]
            }]
        }
    ],
    "scrollbarX": {
        "type": "XYChartScrollbar",
        "series": [
            "s1", "s2"
        ],
        "scrollbarChart": {
            "seriesContainer": {
                "opacity": 0
            }
        }
    },
    "yAxes": [
        {
            "type": "ValueAxis"
        }
    ],
    "xAxes": [
        {
            "type": "CategoryAxis",
            "dataFields": {
                "category": "year"
            },
            "renderer": {
                "minGridDistance": 30
            }
        }
    ],
    "cursor": {}
}